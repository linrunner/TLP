[Unit]
Description=TLP system startup/shutdown
After=basic.target
Before=shutdown.target

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=/usr/sbin/tlp init start
ExecStop=/usr/sbin/tlp init stop

[Install]
WantedBy=basic.target
